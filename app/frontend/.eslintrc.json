{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "no-undef": "error",
    "no-unused-vars": "error",
    "new-cap": "error",
    "no-prototype-builtins": "off",
    "no-plusplus": "error",
    "no-trailing-spaces": "error",
    "strict": "off",
    "semi": [
      "error",
      "always"
    ],
    "no-unused-expressions": "off",
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0
  },
  "plugins": [
    "react",
    "import",
    "jsx-a11y"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react-hooks/recommended"
  ]
}